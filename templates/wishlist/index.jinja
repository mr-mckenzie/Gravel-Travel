{% extends 'base.jinja'%}

{% block content %}
<h1>Wishlist</h1>
<h2>{{total_locations}} stoney {{'spots' if total_locations > 1 else 'spot'}} still to see</h2>

<div class="wishlist_flex_box">

    {% for location in wishlist %}

        <div class="wishlist_box" style="background-position: {{location.rand_bg_pos_x}}% {{location.rand_bg_pos_y}}%">
            <div class="wishlist_box_overlay"></div>
            <div class="box-content">
                <h3> <a class="white_anchor" href="/locations/{{location.id}}">{{ location.name }}</a>, <span class="country_span"><a class="white_anchor" href="/countries/{{location.country.id}}">{{location.country.name}} </a></span></h3>
            </div>
        </div>

    {% endfor %}

        <div class="wishlist_box" style="background-position: 50% 20%">
            <div class="wishlist_box_overlay"></div>
            <div class="box-content">
                <h3>So much gravel, so little time...</h3>
                {# <h3>A <span style="text-decoration: line-through">bird</span> stone in the hand is worth two in the bush.</h3> #}
                {# <h3>A watched <span style="text-decoration: line-through">pot</span> rock never <span style="text-decoration: line-through">boils</span> disappoints.</h3> #}
                {# <h3>People who live in glass houses should not throw stones.</h3> #}
                {# <h3><span style="text-decoration: line-through"> Money</span> gravel does not grow on trees.</h3> #}
                {# <h3>Leave no stone <span style="text-decoration: line-through">unturned</span> untouristed.</h3> #}
            </div>
        </div>

</div>

{% endblock %}