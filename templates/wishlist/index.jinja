{% extends 'base.jinja'%}

{% block content %}
<h1>Wishlist</h1>

<div class="wishlist_flex_box">

    {% for wish_location in wishlist %}

        <div class="wishlist_box">
        <div class="wishlist_box_overlay"></div>
            <p> {{ wish_location.name }}, {{wish_location.country.name}} </p>

            <form action="/wishlist/{{ wish_location.id }}/delete" method="POST">
                <input class="button" type="submit" value="remove from wishlist" />
            </form>

        </div>

    {% endfor %}

</div>

<h2>So much gravel, so little time...</h2>
{% endblock %}