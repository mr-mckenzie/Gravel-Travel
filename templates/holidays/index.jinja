{% extends 'base.jinja'%}

{% block content %}
<h1>Holidays</h1>

<a href="holidays/add">Add a trip</a>

<p>Here are your previous trips:</p>

{% for holiday in input_all_holidays %}

<p> {{ holiday[0].name }}, {{holiday[0].country.name}} </p>
{% if holiday[1] %}
<p> visited in: {{holiday[1].year}} </p>
{% endif %}

{# NOT YET CONNECTED #}
<form action="/holidays/{{ holiday[2] }}/edit" method="POST">
    <input type="submit" value="edit" />
</form>

<form action="/holidays/{{ holiday[2] }}/delete" method="POST">
    <input type="submit" value="delete" />
</form>

{% endfor %}

{% endblock %}