{% extends 'base.jinja'%}

{% block content %}
<h1>EDIT - {{input_country.name}}</h1>

<form action="/countries/{{input_country.id}}/edit" method="post">
    <label for="name">Edit name:</label>
    <input type="text" value="{{input_country.name}}" name="name" id="name">
    <input class="button" type="submit" value="Submit" >
</form>

<p>Locations in {{input_country.name}}:</p>

{% for location in input_locations %}

    <p> <a class="black_anchor" href="/locations/{{location.id}}">{{ location.name }}</a> </p>

    <form action="/locations/{{location.id}}/delete" method="post">
        <label for="delete_{{location.id}}">Delete Location:</label>
        <input class="button" id="delete_{{location.id}}" type="submit" value="Delete" >
    </form>

{% endfor %}

