{% extends 'base.jinja'%}

{% block content %}
<h1>Locations</h1>

<a href="/locations/add">Add a location</a>

<h2>Here are the locations:</h2>

{% for location in input_locations %}

<div>
<h3> <a href="/locations/{{location['location'].id}}">{{ location['location'].name }}</a>, <a href="/countries/{{location['location'].country.id}}">{{location['location'].country.name}}</a> </h3>

    <p>Visited?</p>
    {% if location['has_visited'] == True%}
    <p> &#9745 </p>
    {% else %}
    <p> &#9746 </p>
    {% endif %}

    <p>On wishlist?</p>
    {% if location['on_wishlist']%}
    <p> &#9745</p>
    {% else %}
    <p> &#9746 </p>
    {% endif %}

</div>

{% endfor %}

{% endblock %}