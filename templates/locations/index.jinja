{% extends 'base.jinja'%}

{% block content %}
<h1>Location</h1>

<p>Here are the locations:</p>

{% for location in input_locations %}

<p> <a href="/locations/{{location.id}}">{{ location.name }}</a>, <a href="/countries/{{location.country.id}}">{{location.country.name}}</a> </p>

{% for holiday in input_all_holidays %}
    {% if holiday[0].id == location.id%}
    {# CHANGE THIS TO BE A TOGGLE-ABLE ELEMENT #}
    <p> **VISITED** </p>
    {% endif %}
{% endfor %}

{% for wish_location in input_wishlist %}
    {% if wish_location.id == location.id%}
    {# CHANGE THIS TO BE A TOGGLE-ABLE ELEMENT #}
    <p> **ON WISHLIST** </p>
    {% endif %}
{% endfor %}

{% endfor %}

<a href="/locations/add">Add a location</a>

{% endblock %}