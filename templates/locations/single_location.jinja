{% extends 'base.jinja'%}

{% block content %}
<h1>{{input_location.name}}, <span class="country_span"><a class="black_anchor" href="/countries/{{input_location.country.id}}">{{input_location.country.name}}</a></span></h1>

<p><a class="black_anchor" href="https://en.wikipedia.org/wiki/{{input_location.name}}" title="Learn more about {{input_location.name}} at Wikipedia">Learn more</a> </p>

{% if has_visited == True%}
    <p> Visited on:</p>
    {% for trip in holidays %}

        <p>{{trip.date.day}}/{{trip.date.month}}/{{trip.date.year}} for {{trip.length}} day(s)</p>

        <p>delete trip?</p>
        <form action="/locations/{{input_location.id}}/holiday/{{ trip[2] }}/delete" method="POST">
            <input class="button" type="submit" value="delete" />
        </form>

    {% endfor %}
{% endif %}


{% if on_wishlist == True%}
    <p> On your wishlist </p>

    <form action="/locations/{{input_location.id}}/toggle_wishlist" method="post">
        <label>Remove from wishlist?
            <input class="button" type="submit" value="Yes" >
        </label>
    </form>

{% endif %}


{% if on_wishlist == False and has_visited == False%}
    <p> Not on wishlist </p>

    <form action="/locations/{{input_location.id}}/toggle_wishlist" method="post">
        <label>Want to see the gravel?
            <input class="button" type="submit" value="Yes" >
        </label>
    </form>

{% endif %}
<br>
<h3>Log a trip:</h3>
<form action="/trips/add" method="post">
    <select name="location_id" id="location-select">
        <option value="{{input_location.id}}">{{input_location.name}}, {{input_location.country.name}}</option>   
    </select>

    <label for="date">Arrival date:</label>
    <input type="date" name="date" id="date">

    <label for="length">Length of trip:</label>
    <input type="number" name="length" id="length" min="1">
    
    <input type="submit" value="Add" class="button">
</form>

<form action="/locations/{{input_location.id}}/delete" method="post">
    <label for="delete">Delete Location:</label>
    <input class="button" id="delete" type="submit" value="Delete">
</form>
{% if on_wishlist == True or has_visited == True%}

    <p id="warning">WARNING ALL WISHLIST AND TRIP DATA WILL BE REMOVED IF YOU DELETE THIS LOCATION</p>

{% endif %} 

{% endblock %}